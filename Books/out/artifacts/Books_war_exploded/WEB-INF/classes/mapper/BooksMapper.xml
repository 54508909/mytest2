<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdqn.mapper.BooksMapper">

    <select id="getBooksList" resultType="com.bdqn.entity.Books">
        SELECT * FROM books
        <where>
            <if test="type == ''">
                bookName like concat('%','','%')
            </if>
            <if test="type == 1">
                bookName like concat('%',#{des},'%')
            </if>
            <if test="type == 2">
                bookAuthor like concat('%',#{des},'%')
            </if>
            <if test="type == 3">
                bookPublish like concat('%',#{des},'%')
            </if>
        </where>
        ORDER BY createDate DESC
    </select>

    <!--<insert id="insertBook">
        INSERT INTO books`( `bookName`, `bookAuthor`, `bookPublish`, `bookPage`, `bookPrice`, `createDate`) VALUES ( #{bookName}, #{bookAuthor}, #{bookPublish}, #{bookPage}, #{bookPrice}, now();
    </insert>-->
    <insert id="insertBook" parameterType="com.bdqn.entity.Books">
        INSERT INTO `books`( `bookName`, `bookAuthor`, `bookPublish`, `bookPage`, `bookPrice`, `createDate`) VALUES (#{bookName}, #{bookAuthor}, #{bookPublish}, #{bookPage}, #{bookPrice}, now());
    </insert>
</mapper>